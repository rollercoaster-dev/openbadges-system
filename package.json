{
  "name": "openbadges-system",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pnpm exec concurrently \"pnpm run server\" \"pnpm run client\"",
    "dev:local": "./scripts/dev-local.sh",
    "dev:docker": "./scripts/dev-docker.sh",
    "server": "bun run --hot src/server/index.ts",
    "client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "bun run src/server/index.ts",
    "test": "pnpm run test:client && pnpm run test:server",
    "test:ui": "vitest --ui",
    "test:run": "pnpm run test:client -- --run && pnpm run test:server -- --run",
    "test:coverage": "vitest run --coverage",
    "test:client": "vitest -c vitest.client.config.ts",
    "test:server": "bun test src/server/**/*.bun.test.ts",
    "test:server:vitest": "vitest -c vitest.server.config.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "eslint . --ext .vue,.ts,.js",
    "lint:fix": "eslint . --ext .vue,.ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,vue,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,vue,js,json}\"",
    "type-check": "vue-tsc --noEmit",
    "pre-commit": "lint-staged",
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "review:fetch": "node scripts/coderabbit-review-automation.cjs fetch",
    "review:update": "node scripts/coderabbit-review-automation.cjs update",
    "review:fix": "node scripts/coderabbit-review-automation.cjs fix",
    "review:fix:critical": "node scripts/coderabbit-review-automation.cjs fix --priority=Critical",
    "review:fix:security": "node scripts/coderabbit-review-automation.cjs fix --priority=High",
    "review:auto": "node scripts/coderabbit-review-automation.cjs auto"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/node": "^22.15.21",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "10.4.16",
    "better-sqlite3": "^12.2.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.3.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "kysely": "^0.28.5",
    "lint-staged": "^16.1.2",
    "pg": "^8.16.3",
    "postcss": "8.4.31",
    "prettier": "^3.6.2",
    "tailwindcss": "3.3.5",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^19.2.0",
    "unplugin-vue-components": "^28.5.0",
    "unplugin-vue-router": "^0.12.0",
    "vite": "^6.3.5",
    "vite-plugin-vue-inspector": "^3.2.0",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.1",
    "zod-to-ts": "^1.2.0"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@hono/oauth-providers": "^0.8.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@unhead/vue": "^2.0.9",
    "@vueuse/core": "^13.2.0",
    "hono": "^4.7.10",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "nanoid": "^5.1.5",
    "openbadges-types": "^3.2.3",
    "openbadges-ui": "^1.0.3",
    "pinia": "^3.0.2",
    "sqlite3": "^5.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.3.0",
    "zod": "^4.0.15",
    "zod-form-data": "^3.0.0"
  },
  "lint-staged": {
    "*.{ts,js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "brace-expansion": "2.0.2"
    }
  }
}
