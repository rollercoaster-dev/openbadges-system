{
  "name": "openbadges-system",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pnpm exec concurrently \"pnpm run server\" \"pnpm run client\"",
    "dev:local": "./scripts/dev-local.sh",
    "dev:docker": "./scripts/dev-docker.sh",
    "server": "bun run --hot src/server/index.ts",
    "client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "bun run src/server/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.15.21",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "10.4.16",
    "concurrently": "^9.1.2",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "postcss": "8.4.31",
    "tailwindcss": "3.3.5",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^19.2.0",
    "unplugin-vue-components": "^28.5.0",
    "unplugin-vue-router": "^0.12.0",
    "vite": "^6.3.5",
    "vite-plugin-vue-inspector": "^3.2.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@unhead/vue": "^2.0.9",
    "@vueuse/core": "^13.2.0",
    "hono": "^4.7.10",
    "jsonwebtoken": "^9.0.2",
    "openbadges-types": "^3.2.3",
    "openbadges-ui": "^1.0.3",
    "pinia": "^3.0.2",
    "sqlite3": "^5.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.3.0"
  },
  "pnpm": {
    "overrides": {
      "brace-expansion@>=2.0.0 <=2.0.1": ">=2.0.2"
    }
  }
}
