# =============================================================================
# OpenBadges System Configuration Example
# Copy this file to .env and update the values as needed
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=8888
VITE_PORT=7777
HOST=0.0.0.0

# OpenBadges Server Integration
OPENBADGES_SERVER_URL=http://localhost:3000
OPENBADGES_AUTH_ENABLED=true
OPENBADGES_AUTH_MODE=docker
OPENBADGES_BASIC_AUTH_USER=admin
OPENBADGES_BASIC_AUTH_PASS=admin-user
OPENBADGES_API_KEY=test-api-key-123

# Database Configuration
DB_TYPE=sqlite
SQLITE_FILE=/data/openbadges.sqlite
SQLITE_PATH=./database/app.db
SQLITE_TIMEOUT=5000

# Security
JWT_SECRET=change-this-in-production

# OAuth Configuration (optional - can be disabled)
OAUTH_ENABLED=false
OAUTH_GITHUB_ENABLED=false
OAUTH_SESSION_SECRET=your-secure-session-secret-here
OAUTH_GITHUB_CLIENT_ID=your_github_client_id_here
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret_here
OAUTH_GITHUB_CALLBACK_URL=http://localhost:8888/api/oauth/github/callback

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty

# PostgreSQL Configuration (alternative to SQLite)
# DB_TYPE=postgres
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=openbadges
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=password
# POSTGRES_SSL=false
