# =============================================================================
# OpenBadges System Configuration Example
# Copy this file to .env and update the values as needed
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=8888
VITE_PORT=7777
HOST=0.0.0.0

# OpenBadges Server Integration
OPENBADGES_SERVER_URL=http://localhost:3000
OPENBADGES_AUTH_ENABLED=true
OPENBADGES_AUTH_MODE=docker
OPENBADGES_BASIC_AUTH_USER=admin
OPENBADGES_BASIC_AUTH_PASS=admin-user
OPENBADGES_API_KEY=test-api-key-123

# JWT configuration for service-to-service communication
PLATFORM_ID=urn:uuid:a504d862-bd64-4e0d-acff-db7955955bc1
PLATFORM_CLIENT_ID=openbadges-demo-main-app
PLATFORM_JWT_ISSUER=openbadges-demo-main-app
PLATFORM_JWT_AUDIENCE=
JWT_CLOCK_TOLERANCE_SEC=0
OAUTH2_JWKS_URI=http://host.docker.internal:8888/.well-known/jwks.json

# Database Configuration
DB_TYPE=sqlite
SQLITE_FILE=/data/openbadges.sqlite
SQLITE_PATH=./database/app.db
SQLITE_TIMEOUT=5000

# Security
JWT_SECRET=change-this-in-production

# OAuth Configuration
# Set OAUTH_ENABLED=false to disable OAuth authentication
OAUTH_ENABLED=true
OAUTH_GITHUB_ENABLED=true
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_GITHUB_CALLBACK_URL=http://localhost:8888/api/oauth/github/callback
OAUTH_SESSION_SECRET=generate-a-strong-secret

# Development Configuration
# Set OPENBADGES_PROXY_PUBLIC=true as a development-only bypass for requireAuth
OPENBADGES_PROXY_PUBLIC=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty

