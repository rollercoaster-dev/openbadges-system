# Database Configuration
DB_TYPE=sqlite

# SQLite Configuration
SQLITE_PATH=./database/app.db
SQLITE_TIMEOUT=5000

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=openbadges
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_SSL=false

# PostgreSQL Connection Pool
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=2000

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=8888

# OpenBadges Server Integration
OPENBADGES_SERVER_URL=http://localhost:3000
OPENBADGES_AUTH_ENABLED=true
OPENBADGES_AUTH_MODE=docker
OPENBADGES_API_KEY=your_api_key_here
OPENBADGES_BASIC_AUTH_USER=admin
OPENBADGES_BASIC_AUTH_PASS=admin-user

# OAuth Configuration
OAUTH_ENABLED=true
OAUTH_SESSION_SECRET=your-secure-session-secret-here

# GitHub OAuth
OAUTH_GITHUB_ENABLED=true
OAUTH_GITHUB_CLIENT_ID=your_github_client_id_here
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret_here
OAUTH_GITHUB_CALLBACK_URL=http://localhost:8888/api/oauth/github/callback

# Badge Server Integration
BADGE_SERVER_URL=http://localhost:3000
BADGE_SERVER_API_KEY=your_badge_server_api_key
BADGE_SERVER_JWT_SECRET=shared_jwt_secret

# Security
OAUTH_CSRF_SECRET=csrf_protection_secret
